{
  "name": "lexivoiceai",
  "version": "1.0.0",
  "description": "Nigeria's premier voice AI assistant mobile application",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace LexiVoiceAI.xcworkspace -scheme LexiVoiceAI -configuration Release -sdk iphoneos -archivePath LexiVoiceAI.xcarchive archive",
    "deploy:android": "cd android && ./gradlew bundleRelease",
    "deploy:ios": "cd ios && xcodebuild -exportArchive -archivePath LexiVoiceAI.xcarchive -exportPath ./build -exportOptionsPlist ExportOptions.plist"
  },
  "dependencies": {
    "@react-native-voice/voice": "^3.2.4",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@supabase/supabase-js": "^2.38.5",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-async-storage": "^1.21.0",
    "react-native-audio-recorder-player": "^3.6.0",
    "react-native-sound": "^0.11.2",
    "react-native-vector-icons": "^10.0.3",
    "react-native-super-grid": "^4.9.6",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.27.0",
    "react-native-reanimated": "^3.6.2",
    "react-native-svg": "^14.1.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-permissions": "^4.1.0",
    "react-native-device-info": "^10.12.0",
    "react-native-network-info": "^5.2.1",
    "react-native-keychain": "^8.1.3",
    "react-native-fast-image": "^8.6.3",
    "lottie-react-native": "^6.4.1",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-share": "^10.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/jest": "^29.2.1",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "voice-ai",
    "nigerian-app",
    "react-native",
    "mobile-app",
    "ai-assistant",
    "voice-assistant",
    "claude-ai",
    "minimax-tts"
  ],
  "author": "Lexi Voice AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lexivoiceai/mobile-app.git"
  },
  "bugs": {
    "url": "https://github.com/lexivoiceai/mobile-app/issues"
  },
  "homepage": "https://lexivoice.ai"
}